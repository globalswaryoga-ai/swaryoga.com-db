# Local Development Template
# Copy to .env.local and fill values.
# Never commit real secrets.

# MongoDB
# Option A (recommended): 2 databases inside ONE Atlas cluster
#   - Main DB: Website + Life Planner (users/orders/etc)
#   - CRM DB: Admin/CRM enterprise collections (leads, whatsapp, consent, etc)
MONGODB_URI_MAIN=
MONGODB_MAIN_DB_NAME=swaryogaDB
MONGODB_CRM_DB_NAME=swaryoga_admin_crm

# Backward compatibility (single-DB setup): if MONGODB_URI_MAIN is not set, the app falls back to MONGODB_URI
MONGODB_URI=

# Auth
JWT_SECRET=

# Admin Panel Credentials (ADMIN_PASSWORD must be a bcrypt hash)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# App
NEXT_PUBLIC_API_URL=http://localhost:3000

# Encryption (used to encrypt/decrypt stored OAuth/API tokens)
# IMPORTANT: Keep this stable across deployments, otherwise saved tokens cannot be decrypted.
ENCRYPTION_KEY=

# Vercel Blob (for admin media uploads)
BLOB_READ_WRITE_TOKEN=

# WhatsApp Cloud API (Meta)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# WhatsApp Webhook verification token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# PayU
PAYU_MERCHANT_KEY=
PAYU_MERCHANT_SALT=
PAYU_MODE=PRODUCTION

# Supabase (optional)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
